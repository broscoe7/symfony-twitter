{% extends "base.html.twig" %}

{%  block title %}Post - Add Comment{%  endblock %}
{% block breadcrumbs %}
    → <a href="{{ path('app_micro_post_show', {'id': post.id}) }}">Post</a> → Comment
{% endblock %}

{% block body %}
    {{ include("micro_post/_post.html.twig", {"post": post}) }}
    {{ form_start(form, {"attr": {"novalidate": "novalidate"}}) }}
    <div class="pb-2 text-red-700 dark:text-red-300">{{ form_errors(form) }}</div>
    <div>
        {{ form_label(form.text, "Your Comment", { 'label_attr': { 'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
        {{  form_widget(form.text, {'attr': {'class': ' shadow-sm block w-full border border-gray-300 dark:border-transparent text-sm dark:text-gray-800 rounded-md p-2 mt-1 mb-2'}}) }}
        <div class="pb-2 text-red-700 dark:text-red-300">
            {{ form_errors(form.text) }}
        </div>
    </div>
    <button type="submit" class="shadow-sm block w-full dark:bg-indigo-500 dark:hover:bg-indigo-400 p-2 my-4 bg-indigo-600 hover:bg-indigo-500 rounded-md text-white">Add Comment</button>
    {{ form_end(form) }}
{% endblock %}