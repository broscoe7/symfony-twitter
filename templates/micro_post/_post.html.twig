<div class="mb-2">
    <div class="text-2xl">
        <a href="{{path('app_micro_post_show', {'id': post.id})}}">{{post.title}}</a>
    </div>
    <div class="text-xl">{{ post.text }}</div>
    <div class="text-gray-500 dark:text-gray-400">{{ post.created | date('M j, Y') }}</div>
    <div>
        {% if post.likedBy.contains(app.user) %}
            <a href="{{ path('app_unlike', {id: post.id}) }}">Unlike <span class="rounded-md px-2 bg-gray-200 dark:bg-gray-700">{{ post.likedBy.count }}</span></a>
        {% else %}
            <a href="{{ path('app_like', {id: post.id}) }}">Like <span class="rounded-md px-2 bg-gray-200 dark:bg-gray-700">{{ post.likedBy.count }}</span></a>
        {% endif %}
    </div>
    <div class="text-sm text-gray-500 dark:text-gray-400">
        <a href="{{ path('app_profile', {id: post.author.id}) }}">{{ post.author.email }}</a>
    </div>
    <div class="flex">
        {% if is_granted('POST_EDIT', post) %}
        <a class="mr-2" href="{{ path('app_micro_post_edit', {'id': post.id}) }}">Edit</a>
        {% endif %}
        <a href="{{ path('app_micro_post_comment', {'id': post.id}) }}">Comment <span class="rounded-md px-2 bg-gray-200 dark:bg-gray-700">{{ post.comments.count }}</span></a>
    </div>
</div>