
{% extends "base.html.twig" %}

{% block body %}
<div>
  {% if messages|slice(0, limit)|length > 0 %}
  {% for key,message in messages|slice(0, limit) %}
    <div><a href="{{path('app_show', {'id': key})}}">{{message.message}}</a></div>
    {{ include("hello/_message_date.html.twig") }}
  {% endfor %}
  {% else %}
    <p>No messages yet</p>
  {% endif %}
</div>
{% endblock %}

{% block title %}I've changed the title!{% endblock %}